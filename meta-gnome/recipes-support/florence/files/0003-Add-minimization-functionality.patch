+					case KEY_REDUCE: status->moving=TRUE;
+						status->x_begin = status->x_end;
+						status->y_begin = status->y_end;
+						break;
 					case KEY_BIGGER:
 					case KEY_SMALLER:
 					case KEY_CONFIG:
